{
  "files": ["src/index.ts"],
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "outDir": "./build",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@abis/*": ["abis/*"]
    }
  },
  "exclude": ["node_modules", "abis"]
}
